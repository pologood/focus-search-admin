<?xml version="1.0" encoding="GBK"?>
<quartz>
<!-- 每1分钟执行一次 -->
 <job>
  <job-detail>
   <name>doTasks</name><!-- 表示目标定时器的方法（也就是这个方法要定时的作用）-->
   <group>job</group>
   <job-class>cn.focus.search.admin.utils.TimerTask</job-class><!-- 表示上面的getDate（）方法路径（即所在的包）-->
  </job-detail>
  <trigger>
   <cron>
    <name>t1</name>
    <group>job</group>
    <job-name>doTasks</job-name>
    <job-group>job</job-group>
    <!-- <cron-expression>0 0 0 * * ?</cron-expression> -->
    <cron-expression>0 0/50 * * * ?</cron-expression><!-- 设置定时器的触发时间即间隔时间 -->
   </cron>
  </trigger>
 </job>

</quartz>